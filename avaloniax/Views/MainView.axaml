<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:avaloniax.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="avaloniax.Views.MainView"
             Foreground="White"
             Background="#171C2C">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <ScrollViewer Height="200" VerticalAlignment="Top" HorizontalAlignment="Left" Background="Red">
        <StackPanel x:Name="StackPanel">
            <Button Content="Click me" Click="Button_OnClick" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <ContentPresenter x:Name="Presenter"/>
        </StackPanel>
    </ScrollViewer>

</UserControl>